<%= form_for([@article, @article.comments.build]) do |f| %>
<h4 style="display: block;">
<%= @article.comments.count %> <%= @article.comments.count > 1 ? 'Comment'.pluralize : 'Comment' %>
<small class="pull-right">
<label for="rating">Rating</label>
<select name="comment[rating]" >
  <option value="1">1</option>
  <option value="2">2</option>
  <option value="3">3</option>
  <option value="4">4</option>
  <option value="5" selected>5</option>
</select>
</small>
</h4>
<div class="form-group">
  <%= f.text_area :body, :rows => 8, :class => 'form-control flat comment-editor', :placeholder => 'Leave a comment...', :required => true%>
</div>
<div class="form-group">
  <%= f.text_field :name, :class => 'form-control flat', :placeholder => "You're Name", :required => true %>
</div>
<div class="form-group">
  <%= f.email_field :email, :class => 'form-control flat', :placeholder => "You're Email", :required => true %>
</div>
<div class="form-group">
  <%= f.submit 'Leave Comment', :class => 'btn btn-primary btn-block' %>
</div>
<% end %>